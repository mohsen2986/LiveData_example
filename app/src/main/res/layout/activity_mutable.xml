<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Mutable.MutableActivity"
    >
    <TextView
        android:text="LiveData A"
        android:textAlignment="center"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        />
    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/txt_mutable_live_a"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="~nothing~"
        android:textAlignment="center"
        android:textStyle="bold"
        app:custom_color="#DDD"
        app:height_weight="0.8"
        app:corners="16"
        />
    <Button
        android:id="@+id/btn_mutable_generate"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="16dp"
        android:text="Generate"
        />
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="#EEE"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nothing !!"
            android:layout_gravity="center"
            />
    </FrameLayout>
    <Button
        android:id="@+id/btn_mutable_add_fragment"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Add Fragment"
        android:layout_gravity="center"
        />

</LinearLayout>